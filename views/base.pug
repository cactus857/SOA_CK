doctype html
html
  head
    block head
      meta(charset='UTF-8')
      meta(name='viewport' content='width=device-width, initial-scale=1.0')
      link(rel='stylesheet' href='/css/style.css')
      link(rel='shortcut icon' type='image/png' href='/img/favicon.png')
      link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
      title Natours | #{title}
  
  body(data-alert=`${alert ? alert : ''}`)
    // HEADER
    include _header
        
    // CONTENT
    block content
      h1 This is a placeholder heading
      
    // FOOTER
    include _footer

    // Chatbot Widget
    #chatbot-container.chatbot-widget
      .chatbot-resize-handle-tl
      .chatbot-header
        h3 Natours Assistant 🤖
        button#close-chatbot ✕
      
      .chatbot-messages#chatbot-messages
      
      .chatbot-input-area
        input#chatbot-input(
          type='text',
          placeholder='Ask me anything about tours...',
          autocomplete='off'
        )
        button#send-message Send

    // CSS for Chatbot
    style.
      .chatbot-widget {
        position: fixed;
        bottom: 20px;
        right: 20px;
        width: 400px;
        height: 550px;
        background: white;
        border-radius: 10px;
        box-shadow: 0 5px 40px rgba(0, 0, 0, 0.2);
        display: flex;
        flex-direction: column;
        z-index: 1000;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        overflow: hidden;
      }

      .chatbot-resize-handle-tl {
        position: absolute;
        top: 0;
        left: 0;
        width: 20px;
        height: 20px;
        background: linear-gradient(135deg, #55c57a 50%, transparent 50%);
        cursor: nwse-resize;
        border-radius: 10px 0 0 0;
        z-index: 1001;
      }

      .chatbot-header {
        background: linear-gradient(to right, #7dd56f, #28b487);
        color: white;
        padding: 15px;
        border-radius: 10px 10px 0 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        flex-shrink: 0;
      }

      .chatbot-header h3 {
        margin: 0;
        font-size: 16px;
        font-weight: 700;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }

      #close-chatbot {
        background: none;
        border: none;
        color: white;
        cursor: pointer;
        font-size: 20px;
        padding: 0;
      }

      #chatbot-messages {
        flex: 1;
        overflow-y: auto;
        padding: 15px;
        display: flex;
        flex-direction: column;
        gap: 10px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }

      .message {
        padding: 12px 15px;
        border-radius: 8px;
        max-width: 85%;
        word-wrap: break-word;
        font-size: 14px;
        line-height: 1.5;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        animation: fadeIn 0.3s ease-in;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .message.user {
        background: linear-gradient(135deg, #55c57a, #7dd56f);
        color: white;
        align-self: flex-end;
        border-bottom-right-radius: 2px;
        box-shadow: 0 2px 5px rgba(85, 197, 122, 0.2);
      }

      .message.bot {
        background: #f5f5f5;
        color: #333;
        align-self: flex-start;
        border-bottom-left-radius: 2px;
        border-left: 3px solid #55c57a;
      }

      .message.loading {
        background: #f5f5f5;
        color: #999;
        font-style: italic;
        align-self: flex-start;
        border-left: 3px solid #55c57a;
      }

      .message.bot strong {
        color: #55c57a;
        font-weight: 600;
      }

      .message.bot p {
        margin: 8px 0;
      }

      .message.bot ul,
      .message.bot ol {
        margin: 8px 0 8px 20px;
        padding: 0;
      }

      .message.bot li {
        margin: 5px 0;
      }

      .chatbot-input-area {
        display: flex;
        gap: 10px;
        padding: 15px;
        border-top: 1px solid #e0e0e0;
        background: #fafafa;
        flex-shrink: 0;
      }

      #chatbot-input {
        flex: 1;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 10px 12px;
        font-size: 14px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        transition: border-color 0.2s;
      }

      #chatbot-input:focus {
        outline: none;
        border-color: #55c57a;
        box-shadow: 0 0 5px rgba(85, 197, 122, 0.3);
      }

      #send-message {
        background-color: #55c57a;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.2s;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }

      #send-message:hover {
        background-color: #7dd56f;
        transform: translateY(-2px);
        box-shadow: 0 2px 8px rgba(85, 197, 122, 0.3);
      }

      #send-message:disabled {
        background-color: #ccc;
        cursor: not-allowed;
        transform: none;
      }

